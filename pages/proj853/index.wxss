.svgMain {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* transform-origin: center; */
}

.fullScreen {
  width: 100%;
  height: 100%;
  transform-origin: center;
}

/* #svgDev {
  opacity: 0.6;
} */

.infoArea {
  position: fixed;
  right: 20rpx;
  /* display: block; */
  z-index: 99600;
  color: #003380;
}

.infoLine {
  text-align: right;
  font-size: 20rpx;
  max-width: 240rpx;
}

.tabBar {
  position: fixed;
  /* display: block; */
  z-index: 99900;
  text-align: center;
  left: 75rpx;
  bottom: env(safe-area-inset-bottom);
  width: 600rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.tabBtn {
  margin: 10rpx;
  margin-top: 0;
  margin-bottom: 0;
  width: 120rpx;
  height: 150rpx;
  text-align: center;
  border: 5rpx solid #003380;
  border-radius: 10rpx;
  background-color: white;
}

.tabBtnIcon {
  margin: 15rpx;
  margin-bottom: 5rpx;
  width: 80rpx;
  height: 80rpx;
}

.tabBtnText {
  font-size: 20rpx;
  color: #003380
}

.mask {
  position: fixed;
  z-index: 99700;
  background-color: white;
  opacity: 0.4;
}

.msgBox {
  position: fixed;
  z-index: 99800;
  width: 650rpx;
  left: 50rpx;
  padding: 30rpx;
  text-align: center;
  border: 5rpx solid #003380;
  border-radius: 10rpx;
  background-color: white;
  color: #003380;
}

.msgTitle {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  font-size: 48rpx;
  font-weight: bold;
}

.msgScroll {
  height: 600rpx;
  padding: 20rpx;
  background-color: #d9e1ec;
  border-radius: 5rpx;
}

.msgText {
  margin-top: 5rpx;
  font-size: 30rpx;
  text-align: justify;
}

.msgBtn {
  text-align: center;
  margin: 0 auto;
  border: 2rpx solid #003380;
  border-radius: 5rpx;
  font-size: 30rpx;
  font-weight: bold;
}

#msgBtn_2 {
  padding: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  width: 400rpx;
}

.msgMiniCard {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  padding: 20rpx;
  border: 2rpx solid #003380;
  border-radius: 5rpx;
}

.msg_active {
  color: #003380;
  background-color: #d9e1ec;
}

.msg_inactive {
  color: #6685b3;
  background-color: white;
}

.msgMiniTitle {
  font-size: 42rpx;
  font-weight: bold;
  text-align: left;
}

.msgSubBlock {
  margin: 30rpx 0 70rpx
}

.msgSubTitle {
  margin-bottom: 25rpx;
  font-size: 42rpx;
  font-weight: bold;
  text-align: center;
}

.msgInput {
  margin: 10rpx 0;
  height: 50rpx;
  border: 2rpx solid #003380;
  border-radius: 5rpx;
  background-color: #6685b3;
  color: white;
}

#ccbysaLogo {
  margin: 30rpx auto 0;
  width: 240rpx;
  height: 84rpx;
}